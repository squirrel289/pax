{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pax.local/docs/schemas/dci/aliases.v1.schema.json",
  "title": "DCI Alias Table v1",
  "type": "object",
  "required": [
    "schema_version",
    "alias_table_version",
    "aliases"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1"
    },
    "alias_table_version": {
      "type": "string",
      "minLength": 1
    },
    "aliases": {
      "type": "object",
      "patternProperties": {
        "^(?=.{1,64}$)[a-z0-9]+(?:-[a-z0-9]+)*$": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "pattern": "^(?=.{1,64}$)[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
