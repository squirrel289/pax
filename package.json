{
  "name": "pax",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "hooks:commit-msg": "commitlint --edit",
    "hooks:pre-commit": "pnpm run lint:staged && (pnpm run test:affected:ci || echo \"⚠️  Some tests failed but commit allowed. Run 'pnpm test' for full results.\")",
    "hooks:pre-push": "pnpm run lint:frontmatter && pnpm run test:affected:pre-push",
    "lint:eslint:staged:fix": "eslint --fix",
    "lint:frontmatter": "echo 'No backlog to lint! Exiting...' && exit 0; tsx ../templjs/scripts/ci/lint-frontmatter.ts",
    "lint:markdown:fix": "sh ../templjs/scripts/ci/lint-markdown.sh --fix",
    "lint:staged": "lint-staged",
    "prepare": "husky",
    "test": "vitest run --passWithNoTests",
    "test:affected:ci": "nx affected -t test --base=origin/main --parallel=3 --outputStyle=static",
    "test:affected:pre-push": "sh -c 'BASE_BRANCH=main; if git rev-parse --verify origin/main >/dev/null 2>&1; then BASE_BRANCH=origin/main; fi; pnpm exec nx affected -t test --base=\"$BASE_BRANCH\" --outputStyle=static'",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "keywords": [],
  "author": "Chris Caldwell",
  "license": "MIT",
  "engines": {
    "node": "25.6.1",
    "pnpm": "8.15.0"
  },
  "devDependencies": {
    "@changesets/cli": "latest",
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@eslint/js": "latest",
    "@nx/js": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vitest/coverage-v8": "^4.0.18",
    "ajv": "latest",
    "ajv-formats": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "markdownlint-shell": "latest",
    "nx": "22.5.3",
    "prettier": "latest",
    "ts-node": "latest",
    "tsx": "^4.21.0",
    "typescript": "latest",
    "typescript-eslint": "latest",
    "vitest": "^4.0.18",
    "yaml": "latest"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "pnpm run lint:eslint:staged:fix --"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "backlog/**/*.{md,markdown}": [
      "prettier --write",
      "pnpm run lint:frontmatter --"
    ],
    "*.{md,markdown}": [
      "prettier --write",
      "pnpm run lint:markdown:fix --"
    ]
  },
  "packageManager": "pnpm@8.15.0",
  "nx": {}
}
