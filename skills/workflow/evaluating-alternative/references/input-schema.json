{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pax.local/skills/workflow/isolated-evaluator/input-schema.json",
  "title": "Isolated Evaluator Input",
  "description": "Input contract for evaluating a single alternative in isolation.",
  "type": "object",
  "required": [
    "decision",
    "criteria_confirmed",
    "current_platform",
    "criteria",
    "target_alternative",
    "evaluator_id"
  ],
  "properties": {
    "decision": {
      "type": "string",
      "minLength": 1
    },
    "criteria_confirmed": {
      "type": "boolean"
    },
    "criteria_confirmation_source": {
      "type": "string",
      "enum": [
        "user-confirmed",
        "provided-input",
        "yolo-mode"
      ]
    },
    "current_platform": {
      "type": "string",
      "minLength": 1
    },
    "major_platforms": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "score_scale": {
      "type": "string",
      "enum": [
        "0-100",
        "1-5"
      ]
    },
    "criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "weight",
          "metric",
          "data_source",
          "scoring_rule"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "weight": {
            "type": "number",
            "minimum": 0
          },
          "metric": {
            "type": "string",
            "minLength": 1
          },
          "data_source": {
            "type": "string",
            "minLength": 1
          },
          "scoring_rule": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": true
      }
    },
    "target_alternative": {
      "type": "object",
      "required": [
        "id",
        "name",
        "effort",
        "risk",
        "feasible"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "effort": {
          "type": "string",
          "enum": [
            "S",
            "M",
            "L"
          ]
        },
        "risk": {
          "type": "string",
          "enum": [
            "Low",
            "Med",
            "Medium",
            "High"
          ]
        },
        "feasible": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "evaluator_id": {
      "type": "string",
      "minLength": 1
    },
    "known_evidence": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "criteria_confirmed": {
            "const": true
          }
        },
        "required": [
          "criteria_confirmed"
        ]
      },
      "then": {
        "required": [
          "criteria_confirmation_source"
        ]
      }
    },
    {
      "not": {
        "required": [
          "alternatives"
        ]
      }
    },
    {
      "not": {
        "required": [
          "ranking"
        ]
      }
    },
    {
      "not": {
        "required": [
          "recommendation"
        ]
      }
    },
    {
      "not": {
        "required": [
          "winner"
        ]
      }
    }
  ],
  "additionalProperties": true
}
